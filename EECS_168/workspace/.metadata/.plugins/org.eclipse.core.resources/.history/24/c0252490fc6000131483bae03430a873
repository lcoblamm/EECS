import java.io.*;
import java.util.*;

public class Letter_Counter 
{
	public static void main(String[] args) 
	{
		Scanner keyboard = new Scanner(System.in);
		String filename;
		
		System.out.println("Enter a filename: ");
		filename = keyboard.next();
		
		FileReader fstream;
		BufferedReader in;
		String line;
		
		int[] letters = new int[26];
		int index;
		
		try
		{
			fstream = new FileReader(filename);
			in = new BufferedReader(fstream);
			
			line = in.readLine();
			System.out.println(line);
			
			System.out.println("condition line != null " + (line != null));
			while (line != null)
			{
				System.out.println("in while loop");
				//for each line, go through each character in line and if it is a capital or lower case letter, at 1 to the value at the appropriate letters array index
				/*for (int i = 0; i < line.length(); i++)
				{
					System.out.println("in for loop");
					System.out.println("i = " + i);
					System.out.println("line.charAt(i) = " + line.charAt(i));
					if ((int)line.charAt(i) >= 65 || (int)line.charAt(i) <= 90) //for capital letters
					{
						index = (int)line.charAt(i) - 65; 
						letters[index] += 1;
					}
					else if ((int)line.charAt(i) >= 97 || (int)line.charAt(i) <= 122) //for lower case letters
					{
						index = (int)line.charAt(i) - 97;
						letters[index] += 1;
					}
				}*/
				
				line = in.readLine();
			}
			
			in.close();
		}
		catch (Exception e)
		{
			System.err.println("Error: " + e.getMessage());
		}
		
		for (int i = 0; i<letters.length; i++)
		{
			System.out.println((char)i + ": " + letters[i]);
		}
		/*
		FileWriter fstreamOut;
		BufferedWriter out;
		
		try
		{
			fstreamOut = new FileWriter("output.txt");
			out = new BufferedWriter(fstreamOut);
			
			
		}
		catch(Exception e)
		{
			System.err.println("Error: " + e.getMessage());
		}
*/
	}

}
